@model LibraryVM

<form method="post" enctype="multipart/form-data">
@*     <input asp-for="Library.Id" hidden/>
 *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Library.Id!=0?"Update":"Create") List</h2>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Library.Name" class="p-0"></label>
            <input asp-for="Library.Name" class="form-control" />
            <span asp-validation-for="Library.Name" class="text-danger"></span>
        </div>


        <div class="mb-3 row p-1">
            <label asp-for="@Model.Library.CategoryId" class="p-0"></label>
            <select asp-for="Library.CategoryId" asp-items="@Model.CategoryList" class="form-select p-0">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Library.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Library.SelectedDate" class="p-0"></label>
            <input asp-for="Library.SelectedDate" class="form-control" />
            <span asp-validation-for="Library.SelectedDate" class="text-danger"></span>
         </div>


        <div class="row">
            <div class="col-6 col-md-3">
                @if(Model.Library.Id != 0) {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                } else {
                <button type="submit" class="btn btn-primary form-control">Create</button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Library" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>

        </div>
    </div>
</form>

 @* Client Side Validation *@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
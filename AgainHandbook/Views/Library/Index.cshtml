@model List<Library>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Library list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Library" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Library Name
                </th>

                <th>
                    Category
                </th>

                <th>

                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td></td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Library" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Library" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>



                    

                </tr>
            }
        </tbody>
    
    </table>
</div>